<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
      <h3><%=pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%=message %></li>
      <% end %>
    </ul>
      <% end %>
      <%=form_with model: @book do |f| %>
        <div>
          <label>Title</label>
          <div><%=f.text_field :title, class: "title" %></div>
        </div>
        <div>
          <label>Opinion</label>
          <div><%=f.text_area :body %></div>
        </div>
        <div>
          <%=f.submit "Update Book", class: "btn btn-success" %>
        </div>
       <% end %>
        <span><%=link_to "Show", book_path(@book.id) %></span>
        <span><%=link_to "Back", books_path %></span>
    </div>
  </div>
</div>