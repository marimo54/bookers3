<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
      <h3><%=pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%=message %></li>
      <% end %>
    </ul>
      <% end %>
      <%=form_with model:@user do |f| %>
        <div>
          <label>Name</label>
          <%=f.text_field :name, placeholder:@user.name, class: "name" %>
        </div>
        <div>
          <label>Image</label>
          <div><%=f.file_field :profile_image, accept:"image/*" %></div>
        </div>
        <div>
          <label>Introduction</label>
          <%=f.text_area :introduction %>
        </div>
        <div>
          <%=f.submit class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

